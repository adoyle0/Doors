#!/bin/bash

cd


if [ -x $(command -v yay) ]; then
    $USER_HAS_YAY = true
else
    $USER_HAS_YAY = false
fi

if [ "$USER_HAS_YAY" = false ]; then
    if test -d yay; then
        rm -rf yay
    fi
    git clone https://aur.archlinux.org/yay.git &&
        cd yay &&
        makepkg -si --noconfirm &&
        cd &&
        rm -rf yay
fi

# Base/Shell
yay -S --needed --noconfirm \
\
`# Standard`\
rsync \
sl \
btop \
neovim \
byobu \
zsh \
nnn \
\
`# Aur`\
nvim-packer-git \
oh-my-zsh-git &&

sudo chsh -s /bin/zsh $USER
