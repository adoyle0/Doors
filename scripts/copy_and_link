#!/bin/sh
set -e

printf "\nInstalling Configs..."
cd configs
for file in *
do
    printf "\n%s..." "$file"
    cp -r --update=all "$file" "$HOME"/.config/
done

printf "\n\nInstalling Scripts..."
cd ../

if [ ! -d "$HOME/.local/bin" ]; then
    mkdir -p "$HOME/.local/bin"
fi

cp -r --update=all bin "$HOME"/.local

printf "\nLinking shell...\n"
ln -sf "$HOME"/.config/shell/profile ~/.zprofile
ln -sf "$HOME"/.config/x11/xinitrc ~/.xinitrc
